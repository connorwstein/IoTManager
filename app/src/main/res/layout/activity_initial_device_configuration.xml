<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#009688"
    tools:context="com.example.connorstein.IoTManager.InitialDeviceConfiguration">

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Submit"
        android:textSize="40sp"
        android:textAllCaps="false"
        android:textColor="#cccccc"
        android:background="@drawable/edit_text_style"
        android:id="@+id/nameDeviceSubmit"
        android:layout_below="@+id/deviceType"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/nameDevice"
        android:inputType="textNoSuggestions"
        android:hint="Name"
        android:gravity="center"
        android:textColorHint="#cccccc"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_style"/>


    <Spinner
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/deviceType"
        android:contentDescription="Type"
        android:layout_marginBottom="20dp"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_below="@+id/nameDevice"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text_style"/>

</RelativeLayout>
