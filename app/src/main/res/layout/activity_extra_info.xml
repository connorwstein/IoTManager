<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iotmanager.ExtraInfo"
    android:background="#009688">

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="18dp"
        android:id="@+id/ipAddressLabel"
        android:text="IP: "
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:id="@+id/ipAddress"
        android:layout_toRightOf="@id/ipAddressLabel"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:text="MAC: "
        android:textSize="18dp"
        android:id="@+id/macAddressLabel"
        android:layout_below="@id/ipAddressLabel"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:id="@+id/macAddress"
        android:layout_below="@id/ipAddress"
        android:layout_toRightOf="@id/macAddressLabel"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:text="Room:"
        android:id="@+id/roomLabel"
        android:layout_below="@id/macAddressLabel"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:id="@+id/room"
        android:layout_below="@id/macAddressLabel"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
